<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <stroke android:width="1px" android:color="@color/colorPrimary" />
            <corners android:radius="@dimen/size_5" />
            <padding android:bottom="@dimen/size_5" android:left="@dimen/size_5" android:right="@dimen/size_5" android:top="@dimen/size_5" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape>
            <stroke android:width="1px" android:color="@color/colorEnable" />
            <corners android:radius="@dimen/size_5" />
            <padding android:bottom="@dimen/size_5" android:left="@dimen/size_5" android:right="@dimen/size_5" android:top="@dimen/size_5" />
        </shape>
    </item>

</selector>