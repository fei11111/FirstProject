        <shape>

            <solid android:color="@color/colorAccentAlpha" />

            <stroke
                android:width="@dimen/size_1"
                android:color="@color/white" />

            <corners
                android:bottomLeftRadius="@dimen/size_220"
                android:bottomRightRadius="@dimen/size_220" />

        </shape>
