<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    android:padding="@dimen/size_10">

    <ImageView
        android:id="@+id/iv_head_arrow"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_head_left_arrow" />

    <TextView
        android:id="@+id/tv_head_desp"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="消息"
        android:textColor="@color/colorWhite" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginRight="@dimen/size_5"
        android:layout_toLeftOf="@id/tv_head_desp"
        android:layout_toRightOf="@id/iv_head_arrow">

        <android.support.v7.widget.SearchView
            android:id="@+id/sv_head_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:searchIcon="@drawable/ic_search"></android.support.v7.widget.SearchView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/tx_20"
            android:visibility="gone"/>

    </FrameLayout>

</RelativeLayout>
