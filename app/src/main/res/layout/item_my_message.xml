<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_16"
        android:gravity="center"
        android:text="11:30"
        android:textColor="@color/colorTextSub"
        android:textSize="@dimen/tx_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_toRightOf="@id/tv_time"
        android:background="@drawable/layer_leftline_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_16"
            android:layout_marginLeft="@dimen/size_30"
            android:layout_marginTop="@dimen/size_16"
            android:background="@drawable/shape_message_border"
            android:orientation="vertical"
            android:padding="@dimen/size_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shape_red_dot"
                android:drawablePadding="@dimen/size_5"
                android:ellipsize="end"
                android:lines="1"
                android:text="biaoti"
                android:textColor="@color/colorTextSub"
                android:textSize="@dimen/tx_20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:text="231231231231222222222222222222222222222"
                android:textColor="@color/colorTextSub"
                android:textSize="@dimen/tx_15" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_16"
        android:layout_toRightOf="@id/tv_time"
        android:background="@drawable/shape_image_circle_border_bg"
        android:src="@drawable/ic_my_message" />

</RelativeLayout>
