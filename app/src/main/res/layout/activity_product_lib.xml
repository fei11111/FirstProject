<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_50"
                android:fitsSystemWindows="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_10"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.3">

                <RelativeLayout
                    android:id="@+id/rl_series"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_series"
                        style="@style/Font15Style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:tag=""
                        android:text="@string/series"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:layout_alignBottom="@id/tv_series"
                        android:layout_marginBottom="@dimen/size_2"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_toRightOf="@id/tv_series"
                        android:src="@drawable/ic_down_arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_craft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_craft"
                        style="@style/Font15Style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:tag=""
                        android:text="@string/craft"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:layout_alignBottom="@id/tv_craft"
                        android:layout_marginBottom="@dimen/size_2"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_toRightOf="@id/tv_craft"
                        android:src="@drawable/ic_down_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_type"
                        style="@style/Font15Style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:tag=""
                        android:text="@string/type"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:layout_alignBottom="@id/tv_type"
                        android:layout_marginBottom="@dimen/size_2"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_toRightOf="@id/tv_type"
                        android:src="@drawable/ic_down_arrow" />

                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <com.fei.firstproject.widget.AppHeadView
                    android:id="@+id/appHeadView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftDrawable="@drawable/selector_head_left_arrow"
                    app:leftPadding="@dimen/size_10"
                    app:leftStyle="image"
                    app:leftVisible="visible"
                    app:middleSearchHint="@string/product_lib_search_hint"
                    app:middleStyle="search"
                    app:rightStyle="text"
                    app:rightText="@string/search"
                    app:rightVisible="visible"></com.fei.firstproject.widget.AppHeadView>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <include layout="@layout/view_default_bg" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:overScrollMode="never"
        android:requiresFadingEdge="none"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:srlDisableContentWhenLoading="true"
        app:srlDisableContentWhenRefresh="true"
        app:srlEnableAutoLoadmore="false"
        app:srlEnableLoadmore="true"
        app:srlEnableLoadmoreWhenContentNotFull="false"
        app:srlEnableOverScrollBounce="true"
        app:srlEnableScrollContentWhenLoaded="true"
        app:srlPrimaryColor="@color/colorPrimary">>

        <com.scwang.smartrefresh.header.CircleHeader
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_base_list"
            android:background="@color/colorWhite"></android.support.v7.widget.RecyclerView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</android.support.design.widget.CoordinatorLayout>
