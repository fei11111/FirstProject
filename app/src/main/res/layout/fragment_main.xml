<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.fei.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_150"></com.fei.banner.Banner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="@dimen/size_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_headline" />

            <com.fei.firstproject.widget.TextSwitchView
                android:id="@+id/tsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:padding="@dimen/size_10"></com.fei.firstproject.widget.TextSwitchView>

        </LinearLayout>

        <com.fei.firstproject.widget.MyHorizontalScrollView
            android:id="@+id/hsv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@color/colorWhite"
            android:fadeScrollbars="false"
            android:paddingBottom="@dimen/size_5"
            android:paddingTop="@dimen/size_5"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

        </com.fei.firstproject.widget.MyHorizontalScrollView>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ll_ncw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="vertical"
            android:visibility="gone"
            app:divider="@drawable/shape_line"
            app:showDividers="middle">

            <com.fei.firstproject.widget.SettingView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:desc="@string/more"
                app:title="@string/ncw"></com.fei.firstproject.widget.SettingView>

            <com.fei.firstproject.widget.NoScrollListView
                android:id="@+id/lv_ncw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"></com.fei.firstproject.widget.NoScrollListView>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ll_recommend_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="vertical"
            android:visibility="gone"
            app:divider="@drawable/shape_line"
            app:showDividers="middle">

            <com.fei.firstproject.widget.SettingView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:desc="@string/more"
                app:title="@string/ncw"></com.fei.firstproject.widget.SettingView>

            <com.fei.firstproject.widget.NoScrollListView
                android:id="@+id/lv_recommend_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"></com.fei.firstproject.widget.NoScrollListView>
        </android.support.v7.widget.LinearLayoutCompat>
    </LinearLayout>
</ScrollView>
